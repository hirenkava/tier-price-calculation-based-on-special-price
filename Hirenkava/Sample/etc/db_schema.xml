<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table comment="hirenkava_sample_sample Table" engine="innodb" name="hirenkava_sample_sample" resource="default">
		<column xsi:type="int" name="sample_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
		<column xsi:type="varchar" name="email" nullable="true" disabled="true" length="255" comment="Email"/>
		<column xsi:type="varchar" name="email_address" onCreate="migrateDataFrom(email)" on_update="false" nullable="true" length="255" comment="Email"/>
		<column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
		<column xsi:type="varchar" name="firstname" nullable="true" length="255" comment="First Name"/>		
		<constraint referenceId="PRIMARY" xsi:type="primary">
			<column name="sample_id"/>
		</constraint>
	</table>
</schema>
